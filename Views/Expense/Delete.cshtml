@model Expense
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-4 mb-4">Delete Expense</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">Are you sure you want to delete this expense?</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Amount:</div>
                    <div class="col-sm-8 fw-bold">@Model.Amount.ToString("C")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Date:</div>
                    <div class="col-sm-8">@Model.Date.ToString("MMMM dd, yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Category:</div>
                    <div class="col-sm-8">@Model.Category</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Notes:</div>
                        <div class="col-sm-8">@Model.Notes</div>
                    </div>
                }
                
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    This action cannot be undone.
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a href="/Expense" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Expense
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
